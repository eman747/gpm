generator client {
  provider = "prisma-client-js"
}

generator typegraphql {
  provider = "typegraphql-prisma"
  output   = "../prisma/generated/type-graphql"
  emitTranspiledCode = true
  formatGeneratedCode = false
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

